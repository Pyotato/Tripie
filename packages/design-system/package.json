{
  "name": "@tripie/design-system",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "exports": {
    "./global": [
      "./src/global.scss"
    ],
    ".": [
      "./src/index.ts",
      "./src/index.tsx"
    ],
    "./*": [
      "./src/*.tsx",
      "./src/*.ts",
      "./src/*/index.ts"
    ],
    "./*/*": [
      "./src/*/*.tsx",
      "./src/*/*.ts"
    ]
  },
  "scripts": {
    "build:pkg": "tsc",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "pnpm run lint --fix",
    "generate:component": "turbo gen react-component",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf ./node_modules && rm -rf ./.turbo && rm -rf ./dist && rm -rf ./.next"
  },
  "devDependencies": {
    "@storybook/react": "^8.2.6",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@tripie/jest": "workspace:*",
    "@turbo/gen": "^2.0.11",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/react": "^18.3.3",
    "babel-jest": "^29.7.0",
    "csstype": "^3.1.3",
    "jest": "^29.7.0",
    "msw": "^2.2.10",
    "next": "15.0.0-rc.0",
    "react": "^18.2.0",
    "ts-jest": "^29.2.4",
    "identity-obj-proxy": "^3.0.0"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "postcss": "^8",
    "sass": "^1.77.8",
    "usehooks-ts": "^3.1.0"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ]
    }
  },
  "peerDependencies": {
    "next": "*",
    "react": "*"
  }
}
