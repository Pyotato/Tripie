{
  "name": "@tripie/design-system",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./my-button": "./src/my-button.tsx",
    ".": [
      "./src/index.ts"
    ],
    "./*": [
      "./src/*.tsx",
      "./src/*.ts",
      "./src/*/index.ts"
    ],
    "./*/*": [
      "./src/*/*.tsx"
    ]
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component"
  },
  "devDependencies": {
    "@storybook/react": "^8.1.11",
    "@tripie/eslint-config": "workspace:*",
    "@tripie/typescript-config": "workspace:*",
    "@turbo/gen": "^1.12.4",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "csstype": "^3.1.3",
    "eslint": "^8.57.0",
    "node-sass": "^9.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@tripie/hooks": "workspace:*",
    "next": "15.0.0-rc.0",
    "classnames": "^2.5.1",
    "local": "link:next/font/local",
    "postcss": "^8",
    "react": "^18.2.0"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ]
    }
  }
}
