{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "testMatch": ["**/__tests__/**/*.ts?(x)", "**/?(*.)+(test).ts?(x)"],
  "transform": {
    "^.+\\.ts?$": "ts-jest",
    "^.+\\.tsx?$": "ts-jest",
    "^.+.test.tsx?": "ts-jest",
    "^.+\\.scss$": "jest-scss-transform"
  },
  "moduleDirectories": ["node_modules"]
}
