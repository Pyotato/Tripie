{
  "extends": "@tripie/typescript-config/react-library.json",
  "jsdom": "react",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "outDir": "dist",
    "jsx": "react-jsxdev",
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
