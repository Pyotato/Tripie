{
  "name": "tripie",
  "private": true,
  "packageManager": "pnpm@9.1.1",
  "main": "index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "turbo build",
    "build:storybook": "turbo run build:storybook --filter=storybook",
    "dev": "turbo dev",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "pnpm run lint --fix",
    "prettier": "prettier --check '**/*.{ts,tsx,js,jsx,json}'",
    "prettier:fix": "prettier --write '**/*.{ts,tsx,js,jsx,json}'",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch"
  },
  "dependencies": {
    "eslint": "^9.8.0",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "ts-jest": "^29.2.4",
    "turbo": "^2.0.11"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.5",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.7.0",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-scss-transform": "^1.0.3",
    "prettier": "^3.2.5",
    "turbo": "^2.0.6",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ]
  }
}
